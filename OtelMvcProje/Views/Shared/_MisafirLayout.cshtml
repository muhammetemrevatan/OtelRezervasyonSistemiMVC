
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Misafir Paneli</title>
    <link href="~/hotels-starter/hotels-starter/WebMisafirPanel/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="/Misafir/LogOut">Otel Misafir Paneli</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Ara.." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
            </div>
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="/Misafir/LogOut">Ana Sayfa</a></li>
                    <li><a class="dropdown-item" href="/Misafir/Index">Profilim</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="/Misafir/LogOut">Çıkış Yap</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Menuler</div>
                        <a class="nav-link" href=/Misafir/Index />
                        <div class="sb-nav-link-icon"><i class="fas fa-book"></i></div>
                        Profilim
                        </a>
                        <a class="nav-link collapsed" href="/Misafir/Rezervasyonlarim/">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                            Rezervasyonlarım
                        </a>
                        <a class="nav-link collapsed" href="/Misafir/GelenMesajlar/">
                            <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                            Gelen Mesajlar
                        </a>
                        <a class="nav-link collapsed" href="/Misafir/GidenMesajlar/">
                            <div class="sb-nav-link-icon"><i class="fas fa-inbox"></i></div>
                            Giden Mesajlar
                        </a>
                        <a class="nav-link" href="/Rezervasyon/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Yeni Rezervayon
                        </a>
                        <a class="nav-link" href="/Misafir/LogOut">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            AnaSayfa
                        </a>
                        <a class="nav-link" href="/Iletisim/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-phone"></i></div>
                            İletişim
                        </a>
                        <a class="nav-link" href="/Misafir/LogOut/">
                            <div class="sb-nav-link-icon"><i class="fas fa-close"></i></div>
                            Çıkış Yap
                        </a>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/hotels-starter/hotels-starter/WebMisafirPanel/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
</body>
</html>