
@using OtelMvcProje.Models.Entity
@model List<TblOnRezervasyon>

@{
    ViewBag.Title = "Rezervasyonlarim";
    Layout = "~/Views/Shared/_MisafirLayout.cshtml";
}
<br />
<h2>Rezervasyonlarım</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Rezerve Ad Soyad</th>
        <th>Giriş Tarihi</th>
        <th>Çıkış Tarihi</th>
        <th>Kişi</th>
        <th>Detay</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.AdSoyad</td>
        <td>@(((DateTime)item.GirisTarih).ToString("dd-MMM-yyyy"))</td>
        <td>@(((DateTime)item.CikisTarih).ToString("dd-MMM-yyyy"))</td>
        <td>@item.Kisi</td>
        <td><a href="#" class="btn btn-primary">Detaylar</a></td>
    </tr>
    }
</table>
